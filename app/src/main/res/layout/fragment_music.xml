<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.musics.viewModels.MusicsViewModels" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MusicFragment"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="name"
            android:text="@{viewmodel.name}"
            android:padding="@dimen/mediumPadding"
            android:gravity="center"
            android:textSize="@dimen/tittleSize"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="genero"
            android:text="@{viewmodel.genero}"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="fjdoifjaoiergvoirjvoibvoinao"
            android:gravity="center"
            android:text="@{viewmodel.instrumentos}"
            />

    </LinearLayout>
</layout>